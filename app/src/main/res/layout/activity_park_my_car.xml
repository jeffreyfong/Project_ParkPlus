<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jeff_fong.parkplus.ParkMyCar">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Park My Car"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/BayNum"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/spFloor"
        android:layout_below="@+id/spFloor"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:inputType="numberPassword"
        android:hint="Bay Number"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/spFloor"
        tools:layout_editor_absoluteX="57dp" />

    <Spinner
        android:id="@+id/spFloor"
        android:layout_width="270dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/spCarPark"
        tools:layout_editor_absoluteX="57dp"
        android:layout_below="@+id/spCarPark"
        android:layout_alignStart="@+id/spCarPark"
        android:layout_marginTop="31dp" />

    <Spinner
        android:id="@+id/spCarPark"
        android:layout_width="270dp"
        android:layout_height="48dp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="84dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/btnSave"
        android:layout_marginTop="18dp" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:format12Hour="hh:mm:ss a"
        android:textAlignment="center"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="312dp"
        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnSave" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:text="Save"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="421dp"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/textClock"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
